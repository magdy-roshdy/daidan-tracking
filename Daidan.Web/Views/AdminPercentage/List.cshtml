@model IList<Daidan.Entities.MonthAminPercentage>

@{
    ViewBag.Title = "Admin Percentage Months List";
}

<h2><i class="fa fa-user-secret"></i> Customers List</h2>


<div class="row">
	<div class="col-lg-10">&nbsp;</div>
	<div class="col-lg-2">
		@Html.ActionLink("+ Add Month", "CreateMonth", "AdminPercentage", null, new { @class = "btn btn-default", role = "button", style = "float: right;" })
	</div>
</div>

<table class="table table-responsive">
	<thead>
		<tr>
			<th>Month</th>
			<th>Percentage</th>
			<th style="width: 300px;">Manage Percentages</th>
			<th style="width: 85px;"></th>
		</tr>
	</thead>
	<tbody>
		@foreach (Daidan.Entities.MonthAminPercentage month in Model)
		{
			<tr>
				<td>
					@Html.ActionLink(month.MonthCaption, "EditMonth", new { month.Id })
				</td>
				<td>@month.Amount.ToString() %</td>
				<td>
					<a href="@Url.Action("Manage", "AdminPercentage", new { month.Id })">
						<i class="fa fa-calculator fa-lg" style="color: #033074;"></i>
					</a>
				</td>
				<td>
					@using (@Html.BeginForm("DeleteMonth", "AdminPercentage"))
					{
						@Html.Hidden("monthId", month.Id)
						<input type="image" src="/Content/images/delete.png"
							   onclick="return confirm('Are you sure?')" />
					}
				</td>
			</tr>
		}
	</tbody>
</table>
