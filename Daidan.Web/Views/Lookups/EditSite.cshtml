@model Daidan.Web.Models.EditSiteViewModel
@{
    ViewBag.Title = "Edit Site";
}


<style type="text/css">
	div.row {
		margin: 5px;
	}
</style>
<div class="panel panel-default" style="width: 45%; margin: 20px auto;">
	<div class="panel-heading">
		@if (Model.SiteId > 0)
		{
			<h4>Edit Site</h4>
		}
		else
		{
			<h4>Add Site</h4>
		}
	</div>

	@using (Html.BeginForm("EditSite", "Lookups", FormMethod.Post, new { role = "form" }))
	{
		<div class="panel-body">
			@Html.ValidationSummary(true)
			<div class="row">
				<div class="col-lg-3">
					<label>Name</label>
				</div>
				<div class="col-lg-9">
					@Html.TextBoxFor(x => x.SiteName, new { @class = "form-control" })
					@Html.ValidationMessageFor(x => x.SiteName)
				</div>
			</div>
			
			<div class="row">
				<div class="col-lg-3">
					<label>Customer</label>
				</div>
				<div class="col-lg-9">
					@Html.DropDownListFor(x => x.CustomerId,
					@Daidan.Web.Helpers.DaidanControllersHelper.CustomersToSelectListItems(Model.Customers, Model.CustomerId),
					new { @class = "form-control" })
				</div>
			</div>
			<div class="row">
				<div class="col-lg-3">&nbsp;</div>
				<div class="col-lg-9">
					<label>
						@Html.CheckBoxFor(x => x.SiteIsOwnSite)
						Is Own Site
					</label>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-3">&nbsp;</div>
				<div class="col-lg-9">
					<label>
						@Html.CheckBoxFor(x => x.SiteIsActive)
						Is Active
					</label>
				</div>
			</div>

			@Html.HiddenFor(x => x.SiteId)
		</div>
		<div class="panel-footer">
			<div class="row">
				<div class="col-lg-10">&nbsp;</div>
				<div class="col-lg-2">
					<input type="submit" value="Save" class="btn btn-primary" />
				</div>
			</div>
		</div>
	}
</div>