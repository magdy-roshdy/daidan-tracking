@model Daidan.Web.Models.AddTripLookup
@{
	ViewBag.Title = "Master Report";
}

<style type="text/css">
	#searchPanel{
		margin-top: 20px;
	}
	#searchPanel .row{
		margin-bottom: 5px;
	}
	#searchPanel input, #searchPanel select {
		height: 33px;
	}

	#resultTable tr
	{
		height: 30px;
	}

	#resultTable
	{
		margin-top: 10px;
	}
</style>
<h2><i class="fa fa-file-o"></i> Master Report</h2>
<input type="hidden" id="lookupsText" value='@Html.Raw(Json.Encode(Model))' />
<div id="searchPanel">
	<div class="row">
		<div class="col-md-6">
			<div class="row">
				<div class="col-sm-2">
					Voucher#:
				</div>
				<div class="col-sm-4">
					<input type="text" placeholder="Voucher Number" class="form-control" id="voucherNumber" />
				</div>

				<div class="col-sm-2">
					P.O #:
				</div>
				<div class="col-sm-4">
					<input type="text" placeholder="P.O Number" class="form-control" id="PONumber" />
				</div>
			</div>
		</div>
		<div class="col-md-6">
			<div class="col-sm-2">
				From:
			</div>
			<div class="col-sm-4">
				<div class="input-group date" id="fromDateGroup">
					<input type="text" class="form-control" placeholder="From Date" id="fromDate" />
					<span class="input-group-addon" style="cursor: pointer;" id="tripDateIcon">
						<i class="fa fa-calendar"></i>
					</span>
				</div>
			</div>

			<div class="col-sm-2">
				To:
			</div>
			<div class="col-sm-4">
				<div class="input-group date" id="toDateGroup">
					<input type="text" class="form-control" placeholder="To Date" id="toDate" />
					<span class="input-group-addon" style="cursor: pointer;" id="tripDateIcon">
						<i class="fa fa-calendar"></i>
					</span>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6">
			<div class="row">
				<div class="col-sm-2">
					Driver:
				</div>
				<div class="col-sm-4">
					<select class="form-control" id="drivers">
						<option value="">[ALL]</option>
					</select>
				</div>

				<div class="col-sm-2">
					Truck:
				</div>
				<div class="col-sm-4">
					<select class="form-control" id="trucks">
						<option value="">[ALL]</option>
					</select>
				</div>
			</div>
		</div>
		<div class="col-md-6">
			<div class="col-sm-2">
				Customer:
			</div>
			<div class="col-sm-4">
				<select class="form-control" id="customers">
					<option value="">[ALL]</option>
				</select>
			</div>

			<div class="col-sm-2">
				Site:
			</div>
			<div class="col-sm-4">
				<select class="form-control" id="sites">
					<option value="">[ALL]</option>
				</select>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6">
			<div class="row">
				<div class="col-sm-2">
					Material:
				</div>
				<div class="col-sm-4">
					<select class="form-control" id="materials">
						<option value="">[ALL]</option>
					</select>
				</div>

				<div class="col-sm-2">
					Unit:
				</div>
				<div class="col-sm-4">
					<select class="form-control" id="units">
						<option value="">[ALL]</option>
					</select>
				</div>
			</div>
		</div>
		<div class="col-md-6">
			<div class="col-sm-2">Ticket#</div>
			<div class="col-sm-4">
				<input type="text" class="form-control" placeholder="Ticket Number" id="ticketNumber" />
			</div>
			<div class="col-sm-2">&nbsp;</div>
			<div class="col-sm-4">
				<button class="btn form-control btn-primary" id="searchButton">Search &nbsp; <i class="fa fa-search"></i></button>
			</div>
		</div>
	</div>
	<div class="row" style="border-bottom: dotted 1px #000;">&nbsp;</div>
	<div id="searchResult" style="display: none;">
		<div class="row">
			<div class="col-lg-8">&nbsp;</div>
			<div class="col-lg-2">
				<button disabled="disabled" id="updatePONumberButton" style="float: right;"
						class="btn btn-default btn-block">
					Update P.O Number ...
				</button>
			</div>
			<div class="col-lg-2">
				<button disabled="disabled" id="updateSellingPriceButton" style="float: right;"
						class="btn btn-default btn-block">
					Update Selling Price ...
				</button>
			</div>
		</div>
		<table border="1" class="table-responsive" style="width: 100%;" id="resultTable">
			<thead>
				<tr style="background-color: #EBEBEB; height: 35px;">
					<th style="text-align: center;" width="30">
						<input type="checkbox" id="checkAll" />
					</th>
					<th style="text-align: center;" width="85">Date</th>
					<th style="text-align: center;" width="75">Voucher #</th>
					<th style="text-align: center;" width="75">P.O</th>
					<th style="text-align: center;">Customer</th>
					<th style="text-align: center;" width="130">Site</th>
					<th style="text-align: center;" width="80">Truck</th>
					<th style="text-align: center;" width="90">Material</th>
					<th style="text-align: center;" width="80">Quantity</th>
					<th style="text-align: center;" width="70">Unit Cost</th>
					<th style="text-align: center;" width="75">Trip Cost</th>
					<th style="text-align: center;" width="75">Extra Cost</th>
					<th style="text-align: center;" width="75">Total Cost</th>
					<th style="text-align: center;" width="30">&nbsp;</th>
					<th style="text-align: center;" width="30">&nbsp;</th>
				</tr>
			</thead>
			<tbody>
				
			</tbody>
		</table>
	</div>
	<div class="row" id="loadingDiv" style="display: none;">
		<div style="margin: 0 auto; width: 150px;">
			loading ...
		</div>
	</div>
	<div class="row" style="display: none;" id="noResultMessage">
		<br />
		<h3 style="margin: 0 auto; width: 100%; text-align: center;">There are no trips matching the search parameters!</h3>
	</div>
</div>
@Html.Partial("~/Views/Shared/_EditTripModal.cshtml", null)

<div class="modal fade" id="updatePONumberModal" tabindex="-1" role="dialog">
	<div class="modal-dialog" style="width: 450px;">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title">Update P.O Number</h4>
			</div>
			<div class="modal-body">
				<div class="row">
					<div class="col-md-4">
						P.O Number:
					</div>
					<div class="col-md-7">
						<input type="text" class="form-control" id="poNumber" placeholder="P.O Number" />
					</div>
					<div class="col-md-1"></div>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				<button type="button" class="btn btn-primary">Update</button>
			</div>
		</div>
	</div>
</div>

<div class="modal fade" id="updateSellingPriceModal" tabindex="-1" role="dialog">
	<div class="modal-dialog" style="width: 450px;">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title">Update Selling Price</h4>
			</div>
			<div class="modal-body">
				<div class="row">
					<div class="col-md-5">
						Unit Selling Price:
					</div>
					<div class="col-md-6">
						<input type="text" class="form-control" id="sellingPrice" placeholder="Unit Selling Price" />
					</div>
					<div class="col-md-1"></div>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				<button type="button" class="btn btn-primary">Update</button>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript" src="~/Scripts/master-report.js"></script>